/* pages/category/category.wxss */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 85rpx;
}
.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 33rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.navItem .active{
  border-bottom: 1rpx solid #d43c33;
}
/* 小说区 */
/* pages/bookcity/bookcity.wxss */
.book-item{
  height: 250rpx;
  display: flex;
  margin: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #faf7f7;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
  background-color: rgb(252, 250, 247);
}
.img1 image{
  width: 180rpx;
  height: 250rpx;
  margin-right: 10px;
  background-color: pink;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  flex: 1;
  overflow: hidden;
  
}
.title{
  font-size: 30rpx;
  font-weight: 600;
}
.txt{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

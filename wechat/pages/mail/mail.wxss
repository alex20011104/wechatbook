.commentlist{
  margin: 10rpx;
  width: 100%;
  height: 150rpx;
  margin: 80rpx 20rpx;
}

.head{
  display: flex;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.head .name{
  font-size: 30rpx;
}
.head .time{
  color: rgb(240, 211, 149);
  font-size: 29rpx;
}
.head image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}
.delete image{
  margin-left: 300rpx;
  height: 55rpx;
  width: 55rpx;
}
.content{
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-left: 100rpx;
  font-size: 36rpx;
}
.book{
  margin: 15rpx;
}
.first{
  display: flex;
  justify-content: space-between;
}
.detail{

  display: flex;
}
.detail image{
  width: 170rpx;
  height: 230rpx; 
}
.detail .message{
  width: 300rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
}
.detail .message .message_item{
  margin-bottom: 10px;
}
/* 评分区 */
.gradelist{
  display: flex;
  flex-direction: column;
}
.grade{
  padding: 20rpx auto;
  flex: 1;
  display: flex;
  color: #019ef8;
  justify-content: flex-end;
  font-size: 40rpx;
}
/* 按钮区 */
.btnGroup{
  display: flex; 
  width: 100%;
}
.btnGroup .btn{
  margin: 0 10rpx;
  font-size: 32rpx;
  padding: 8px 10px;
  width: 30%;
  border: 4rpx antiquewhite solid ;
}
.btnGroup .yellow{
  background-color: yellowgreen;
  margin: 0 10rpx;
  font-size: 32rpx;
  padding: 8px 10px;
  width: 30%;
  border: 4rpx antiquewhite solid ;
}

/* 简介区 */
.introduce{
  margin-top: 20rpx;
  width: 100%;
}
.introduce text{
  font-size: 35rpx;
  color: #666;
}
/* 目录区 */
.chapter{
  margin: 30rpx 0;
  padding: 5rpx;
  border-top: 0.3rpx solid rgb(230, 235, 236);
  border-bottom: 0.3rpx solid rgb(230, 235, 236);
  font-size: 38rpx;
  color: #666;
}
/* 评论区 */
.commentlist{
  padding-bottom: 200rpx;
}
.commentlist .commentheader{
  margin-top: 30rpx;
  font-size: 38rpx;
  color: #666;
}
.commentlist .commentlist-1{
  padding: 10rpx;
  display: flex;
  flex-direction:column ;
  margin-bottom: 10rpx;
  border:2rpx solid #dde9ee;
  box-shadow: 0.8rpx 0.8rpx 1rpx rgba(0,0,0,0.3)
}
.commentlist .commentlist-1 .title{
  display: flex;
  justify-content: space-between;
}
.commentlist .commentlist-1 .title .id{
  color: rgb(240, 211, 149);
  font-size: 29rpx;
}
.commentlist .commentlist-1 .title .time{
  color: rgb(240, 211, 149);
  font-size: 29rpx;
}
.commentlist .commentlist-1  .comment{
  font-size: 32rpx;
}
.comment-input {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  padding: 0 10px;
  box-sizing: border-box;
}

.input-box {
  flex: 1;
  height: 70%;
  border: 0.2px solid rgb(240, 221, 182);
  outline: none;
  padding: 0 10px;
}

.submit-btn {
  width: 15%;
  height: 30px;
  line-height: 30px;
  margin-left: 10px;
  padding: 0 10px;
  background-color: #1AAD19;
  color: #fff;
  border-radius: 4px;
}

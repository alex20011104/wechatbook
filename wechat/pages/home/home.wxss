/* pages/home/home.wxss */
/* 搜索区域 */
.search{
  display: flex;
  height: 65rpx;
  margin: 10rpx 10rpx 15rpx;
}
.search .img{
  margin-top: 5rpx;
  width: 50rpx;
  height: 50rpx;
}
.search .book{
  margin: 0;
  width: 50rpx;
  height: 65rpx;
}
.search input{
  flex: 1;
  font-size: 35rpx;
  height: 65rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 15rpx;
  background: rgba(216, 215, 215, 0.3);
}
.search .canel{
  width: 100rpx;
  text-align: center;
  font-size: 38rpx;
}


/* 轮播图区域 */
.banners{
  width: 100%;
  height: 300rpx;
}
 .banners image{
   width: 100%;
   height: 100%;
 }
 /* 导航区域 */
 .navContainer{
   display: flex;
   margin: 20rpx;
 }
 .navItem{
   display: flex;
   flex-direction: column;
   align-items: center;
   width:33%;
 }
 .iconfont{
   width:80rpx;
   height: 80rpx;
   text-align: center;
   line-height: 80rpx;
   font-size: 50rpx;
   margin: 20rpx 0;
   color: #fff;
 }
 .font{
  font-size:30rpx;
  font-weight: bold;
 }
 /* 新书推荐区域 */
 
.header .title{
   padding: 20rpx;
   font-size: 35rpx;
   line-height: 80rpx;
   color: rgb(29, 28, 28);
 }
 .booklist{
   
   display: flex;
   flex-wrap: wrap;
 }
 .book{
   width: 160rpx;
   height: 320rpx;
   display: flex;
   flex-direction: column;
   /* align-items: center; */
   margin:0 45rpx;
   
 }
 .book image{
   width: 160rpx;
   height: 210rpx;
 }
 .book .name{
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
 }
 .book .author{
  font-size: 22rpx;
  color: #666;
 }